<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/head"
        layout="@layout/head_nab" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cashman Physiotherapy"
                android:textSize="20dip" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="120dip"
                    android:layout_height="100dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/contact_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/tv_view_map"
                        android:layout_marginLeft="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_map"
                        android:textColor="#458B00"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/contact_us_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/solid"
                    android:gravity="center"
                    android:text="Call"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/solid"
                    android:gravity="center"
                    android:text="Email"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/tv_Website"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/solid"
                    android:gravity="center"
                    android:text="Website"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="120dip"
                    android:layout_height="100dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_two" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/contact_address2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/tv_view_map2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/view_map"
                        android:textColor="#458B00"
                        android:textSize="18.0sp" />
                </LinearLayout>
         
                
            </LinearLayout>
           <TextView
                android:id="@+id/contact_us_time2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" />
            <TextView
                android:id="@+id/shareApp"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:layout_marginLeft="50dip"
                android:layout_marginTop="22dip"
                android:background="@drawable/solid"
                android:gravity="center"
                android:text="Refer a friend"
                android:textSize="20dip"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>